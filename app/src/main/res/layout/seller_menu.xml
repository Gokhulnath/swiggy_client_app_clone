<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/checkboxCB"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"/>

    <ToggleButton
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:textOff=" "
        android:textOn=" "
        android:layout_toRightOf="@id/checkboxCB"
        android:id="@+id/vegBT"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/ic_vegetarian_mark" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/vegBT"
        android:layout_centerVertical="true"
        android:text="Dosa"
        android:padding="@dimen/_5sdp"
        android:textColor="#000"
        android:id="@+id/foodTV"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/rupeeTV"
        android:layout_toRightOf="@id/foodTV"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:text=" ₹ "
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="#000"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="@dimen/_50sdp"
        android:layout_toRightOf="@id/rupeeTV"
        android:layout_marginLeft="@dimen/_2sdp"
        android:id="@+id/priceTV"
        android:text="₹ 30"
        android:layout_height="wrap_content"/>

    <ToggleButton
        android:id="@+id/editBT"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:textOff=" "
        android:textOn=" "
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/priceTV"
        android:background="@drawable/ic_pencil"
        android:padding="@dimen/_10sdp" />


</RelativeLayout>