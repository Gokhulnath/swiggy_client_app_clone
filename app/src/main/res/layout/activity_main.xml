<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_520sdp"></androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/word1TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:text="Ready to order from canteens within your campus?"
        android:textAlignment="center"
        android:textColor="#C0C0C0"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <Button
        android:id="@+id/locationB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word1TV"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:text="SET DELIVERY LOCATION"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_30sdp"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationB"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/word2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account? "
            android:textAlignment="center"
            android:textColor="#A9A9A9"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_10ssp"></TextView>

        <TextView
            android:id="@+id/LoginTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_10ssp"
            android:onClick="OnClick"
            android:clickable="true"></TextView>

    </LinearLayout>
</RelativeLayout>