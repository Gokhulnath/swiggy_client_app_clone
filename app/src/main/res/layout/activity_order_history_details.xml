<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/orderRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backArrowIV"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/orderNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/backArrowIV"
            android:text="ORDER #943615472034"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderNumTV"
            android:layout_toRightOf="@+id/backArrowIV"
            android:text="Delivered  | " />

        <TextView
            android:id="@+id/itemNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderNumTV"
            android:layout_toRightOf="@+id/statusTV"
            android:text="3 items" />

        <TextView
            android:id="@+id/itemCostTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderNumTV"
            android:layout_toRightOf="@+id/itemNumTV"
            android:paddingLeft="@dimen/_5sdp"
            android:text="₹250" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:layout_below="@+id/itemCostTV"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-2dp"
            android:background="#4A4848" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deliveryRV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/orderRV">

        <ImageView
            android:id="@+id/deliveryIV"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/delivery" />

        <RelativeLayout
            android:id="@+id/fromAddRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deliveryIV"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/hotelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sathyas"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/collegeNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotelTV"
                android:text="SSN College of Engineering" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toAddRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fromAddRV"

            android:layout_toRightOf="@+id/deliveryIV">

            <TextView
                android:id="@+id/toTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="IT Department"
                android:textColor="#000"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/toAddTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toTV"
                android:text="SSN College of Engineering" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deliveryStatusRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliveryRV">

        <ImageView
            android:id="@+id/checkIV"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/delDateTV"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/checkIV"
            android:text="Order Delivered on March 4 5:30 PM" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bilDetailsRV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/deliveryStatusRV"
        android:background="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"
            android:text="BILL DETAILS" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/itemsLV"
        android:layout_below="@+id/bilDetailsRV"
        android:layout_height="@dimen/_150sdp">

    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_below="@id/itemsLV"
        android:background="@drawable/dash_line"
        android:layerType="software" />


    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/paymentRV"
        android:paddingTop="@dimen/_10sdp"
        android:layout_below="@+id/itemsLV"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/itemTotalTV"
            android:text="Item Total"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/costTV"
            android:text="₹240"
            android:paddingRight="@dimen/_20sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Delivery Charges"
            android:layout_below="@id/itemTotalTV"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/deliveryCostTV"
            android:text="₹20"
            android:paddingTop="@dimen/_5sdp"
            android:layout_below="@+id/costTV"
            android:paddingRight="@dimen/_20sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/paidViaRV"
        android:layout_below="@+id/paymentRV"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/viaTV"
            android:text="Paid Via Credit/Debt card"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Total"
            android:layout_toLeftOf="@+id/totalCostTV"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/totalCostTV"
            android:text="₹250"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:text="REORDER"
        android:textColor="#ff9703">

    </Button>
</RelativeLayout>