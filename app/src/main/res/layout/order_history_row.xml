<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:visibility="visible">


    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pastorders">

        <RelativeLayout
            android:id="@+id/hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gangotree"
                android:textSize="20dp"
                android:textStyle="bold">


            </TextView>



            <TextView
                android:id="@+id/hotel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel_name"
                android:layout_marginTop="5dp"
                android:text="â‚¹250">

            </TextView>

            <ImageView
                android:id="@+id/Hotel_tick"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"

                android:layout_marginTop="3dp"

                android:src="@drawable/ic_check_circle">

            </ImageView>

            <TextView
                android:id="@+id/hotel_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/Hotel_tick"
                android:layout_marginRight="15dp"
                android:text="Picked-up">

            </TextView>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/hotel"
            android:background="@drawable/dash_line"
            android:layerType="software" />

        <RelativeLayout
            android:id="@+id/order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel">

            <TextView
                android:id="@+id/order_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Sev Puri x1, Dahi Papri Chaat x 1"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_items"
                android:layout_marginTop="5dp"
                android:text="March 5, 5:45 PM">

            </TextView>

            <Button
                android:id="@+id/but_reorder"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:padding="5dp"
                android:text="REORDER"
                android:textColor="#ff6600"></Button>

            <Button
                android:id="@+id/but_rate"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/but_reorder"
                android:background="#fff"
                android:padding="5dp"

                android:text="RATE FOOD">

            </Button>

            <TextView
                android:id="@+id/order_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/but_rate"
                android:padding="5dp"
                android:text="Your food rating">

            </TextView>

            <ImageView
                android:id="@+id/star_img"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:layout_below="@id/order_rate"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_star">

            </ImageView>

            <TextView
                android:id="@+id/order_yourrating"
                android:layout_width="31dp"
                android:layout_height="26dp"
                android:layout_below="@id/order_rate"
                android:layout_marginLeft="-65dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@id/order_rate"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>