<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_225sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/itemIconIV"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/food" />

    <TextView
        android:id="@+id/categoryTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starters"
        android:textSize="@dimen/_8ssp" />

    <TextView
        android:id="@+id/itemNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_vegetarian_mark"
        android:maxLines="2"
        android:text="Chicken Fried Rice"
        android:textColor="#000000"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priceTV"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="â‚¹100"
            android:textSize="@dimen/_11ssp" />

        <Button
            android:id="@+id/addItemBT"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_35sdp"
            android:backgroundTint="#D21F3C"
            android:text="ADD"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/numberButtonENB"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:visibility="gone"
            app:backGroundColor="#D21F3C"
            app:textSize="@dimen/_4ssp" />

    </LinearLayout>
</LinearLayout>
